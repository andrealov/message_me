<h4 class="ui center aligned medium icon header">
    <i class="circular red users icon"></i>
    Chatroom
</h4>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid card chatbox">
            <div class="content">
                <div class="header">Messages</div>
            </div>
            <div class="content" id="messages">
                <div class="ui small feed" id="message-container">
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, html: { class: "ui reply form", role: "form" }, url: message_path, remote: true) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body %>
                            <%= f.button '<i class="inverted red envelope icon"></i>'.html_safe %> 
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="four wide column">
        <div class="ui inverted vertical menu">
            <a class="item">
                Link 1
            </a>
            <a class="item">
                Link 2
            </a>
        </div>
    </div>
</div>
